{
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "watch": ["src/"],
  "execMap": {
    "ts": "node -r ts-node/register -r tsconfig-paths/register"
  },
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "src/tsconfig.json",
    "SERVER_PORT": 4000
  }
}